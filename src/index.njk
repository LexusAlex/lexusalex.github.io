{% include 'header.njk' %}

<main class="page__content">
    <div class="content">
        <h1>Заметки</h1>
        {% for year, posts in collections.notes | groupByPublicationYear %}
            <section>
                <h2 class="content_year">{{ year }}</h2>
                <div class="notes">
                    {% for post in posts %}
                        <style>
                            #atricle_{{ post.data.number }}:hover {
                                background-image: url("{{ post.data.image}}") !important;
                            }
                        </style>
                        <a id="atricle_{{ post.data.number }}" class="notes__item" style='background-image: url("{{ post.data.gradient }}");' href="{{ post.url }}">
                            <time class="notes__item_time" datetime="{{ post.date | dateToIsoString }}">{% formatDate post.date %}</time>
                            {{ post.data.title }}
                            <small class="notes__item_tags">{{ post.data.themes}}</small>
                        </a>
                    {% endfor %}
                </div>
                {#<table class="dated-table">
